generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  oauthProvider String
  oauthId       String
  email         String
  displayName   String
  walletAddress String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  userStamps        UserStamp[]
  compositeNfts     CompositeNft[]
  merchandiseOrders MerchandiseOrder[]
  
  @@unique([oauthProvider, oauthId])
}

model Stamp {
  id          String      @id @default(uuid())
  type        String
  name        String
  imageUrl    String
  qrCode      String      @unique
  description String?
  createdAt   DateTime    @default(now())
  
  userStamps              UserStamp[]
  backgroundComposites    CompositeNft[] @relation("BackgroundStamp")
  characterComposites     CompositeNft[] @relation("CharacterStamp")
}

model UserStamp {
  id         String   @id @default(uuid())
  userId     String
  stampId    String
  acquiredAt DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id])
  stamp      Stamp    @relation(fields: [stampId], references: [id])
  
  @@unique([userId, stampId])
}

model CompositeNft {
  id                 String   @id @default(uuid())
  userId             String
  backgroundStampId  String
  characterStampId   String
  compositeImageUrl  String
  nftTokenId         String?
  nftTxHash          String?
  createdAt          DateTime @default(now())
  
  user               User     @relation(fields: [userId], references: [id])
  backgroundStamp    Stamp    @relation("BackgroundStamp", fields: [backgroundStampId], references: [id])
  characterStamp     Stamp    @relation("CharacterStamp", fields: [characterStampId], references: [id])
  merchandiseOrders  MerchandiseOrder[]
}

model MerchandiseOrder {
  id                String   @id @default(uuid())
  userId            String
  compositeId       String
  merchandiseType   String
  merchandiseName   String
  size              String
  quantity          Int      @default(1)
  priceAmount       String
  priceCurrency     String
  mockupImageUrl    String
  shippingInfo      String
  status            String   @default("pending")
  paymentStatus     String   @default("pending")
  paymentTxHash     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User         @relation(fields: [userId], references: [id])
  composite         CompositeNft @relation(fields: [compositeId], references: [id])
}